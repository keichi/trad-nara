<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
	<title></title>
	
    <%- stylesheet_link_tag('top_style') %>
	<%- javascript_include_tag('jquery-1.7.2.min', 'jquery.contenthover.min', 'script', 'jquery.easing.1.3', 'jquery.color') %></head>
<body>
    <div id="wrapper">
        <div id="header">
            <h1>TRAD NARA</h1>
        </div>
    
        <div id="navigation">
            <ul>
                <li><a href="#"><div class="nav-item-title">Home</div><div class="nav-item-desc">Order by popularity</div></a></li>
                <li><a href="#"><div class="nav-item-title">Timeline</div><div class="nav-item-desc">Order by post date</div></a></li>
                <li><a href="#"><div class="nav-item-title">Favorites</div><div class="nav-item-desc">View my favorites</div></a></li>
                <li><a href="#"><div class="nav-item-title">Settings</div><div class="nav-item-desc">Account Settings</div></a></li>
                <li><a href="#"><div class="nav-item-title">Login</div><div class="nav-item-desc">Log in to Trad Nara</div></a></li>
            </ul>
        </div>
    
        <div id="container">
            <% for(var i = 0; i < posts.length; i++) { %>
            <div class="post-box">
                <img src="<%- posts[i].topimage %>" alt="thumbnail" width="300" height="200"/>
                <div class="contenthover"><%- posts[i].lead %></div>
                
                <div class="title-author">
                    <h2 class="post-title"><a href="/post/<%- posts[i].id %>"><%= posts[i].title %></a></h2>
                    <div class="post-author"><span class="post-author-by">by </span><a href="#"><%= posts[i].author %></a></div>
                </div>
                <div class="meta">1234 Views, 23 Likes</div>
            </div>
            <% } %>
            
       </div>
        
        <div id="footer">Copyright &copy; <%= new Date().getFullYear() %> <a href="#" class="top-scroll">Trad Nara</a>. All Rights Reserved.</div>
    </div>
</body>
</html>

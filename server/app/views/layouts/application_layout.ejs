<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML+RDFa 1.0//EN" "http://www.w3.org/MarkUp/DTD/xhtml-rdfa-1.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" version="XHTML+RDFa 1.0" xmlns:og="http://ogp.me/ns#" xmlns:fb="http://ogp.me/ns/fb#" xml:lang="en">
<head>
	<meta name="keywords" content="Nara, Tourism, Sightseeing, Travel, Travel Guide, Japan" />
    <meta name="description" content="Discover traditional Nara ! Here you can check out every information about the most beautiful city of Japan." />
    <meta name="robots" content="index,follow,archive" /> 
    <meta http-equiv="Content-Language" content="en" />
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="<%= url %>" />
    <meta property="og:site_name" content="Trad Nara" />
    <meta property="fb:app_id" content="385327488206734" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    
    <title><%= title %> - Trad Nara</title>

    <link rel="shortcut icon" href="/images/favicon.png"/>
    <%- stylesheet_link_tag('common', 'font-awesome', 'jquery.powertip') %>
    <% if (path.indexOf('/post/') == 0) { %>
    <%- stylesheet_link_tag('flexslider', 'post_style') %>
    <% } else { %>
    <%- stylesheet_link_tag('top_style') %>
    <% } %>
    <%- stylesheet_link_tag('http://fonts.googleapis.com/css?family=Arimo:400,700|Vollkorn') %>

    <%- javascript_include_tag('jquery-1.8.2.min', 'jquery.powertip-1.1.0.min') %>
    <% if (path.indexOf('/post/') == 0) { %>
    <%- javascript_include_tag('jquery.flexslider', 'post_script', 'http://maps.google.com/maps/api/js?sensor=false', 'https://apis.google.com/js/plusone.js') %>
    <% } else { %>
	<%- javascript_include_tag('jquery.contenthover.min', 'jquery.easing.1.3', 'jquery.color', 'spin.min', 'jquery.animate-shadow-min', 'script') %>
    <% } %>

    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-37053957-1']);
        _gaq.push(['_setDomainName', 'trads-jp.com']);
        _gaq.push(['_trackPageview']);

        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
    <!-- Facebook Javascript SDK -->
    <div id="fb-root"></div>
    <script type="text/javascript">
    //<![CDATA[
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=385327488206734";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    //]]>
    </script>

    <div id="wrapper">
        <div id="header">
			<h1>Trad Nara</h1>
			<% if(user) { %>
			<div id="user-info">
                <img width="25" height="25" src="<%- profile_img_url(user) %>" />
				<%= user.name %>
        	</div>
			<% } %>
		</div>
    
        <div id="navigation">
            <ul>
                <li><%- link_to('<i class="icon-home"></i><span class="nav-item">HOME</span>', '/', {title: 'Order posts by popularity'}) %></li>
                <li><%- link_to('<i class="icon-time"></i><span class="nav-item">TIMELINE</span>', '/timeline', {title: 'Order posts by post date'}) %></li>
                <li><%- link_to('<i class="icon-star"></i><span class="nav-item">FAVORITES</span>', '/favorites', {title: 'View my favorite posts'}) %></li>
                <li><%- link_to('<i class="icon-user"></i><span class="nav-item">CONTRIBUTORS</span>', '/contributors', {title: 'Dedicated people who contributed to this project'}) %></li>
                <li><%if (user) { %>
                    <%- link_to('<i class="icon-signout"></i><span class="nav-item">LOGOUT</span>', '/logout', {title: 'Logout from Trad Nara'}) %>
                <% } else { %>
                    <%- link_to('<i class="icon-signin"></i><span class="nav-item">LOGIN</span>', '/login', {title: 'Login to Trad Nara'}) %>
                <% } %>
                </li>
            </ul>
        </div>
    
        <div id="container" class="clearfix">
			<%- body %>
   	    </div>

        <div id="footer">
            <div id="footer-miscs">
                <a href="/privacy-policy">Privacy Policy</a>
                <span>|</span>
                <a href="/contact-team">Contact Team</a>
                <span>|</span>
                <a href="http://creativecommons.org" target="_blank">Creative Commons</a>
            </div>
            <div id="footer-copyright">
                Copyright &copy; <%= new Date().getFullYear() %> Trad Nara. All rights reserved.
            </div>
        </div>
    </div>

    <div id="shade">
    </div>

    <div id="modal-contributor" class="clearfix">
    </div>

    <% if (path.indexOf('/post/') != 0) { %>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'tradnara'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function () {
            var s = document.createElement('script'); s.async = true;
            s.type = 'text/javascript';
            s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
            (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
        }());
    </script>
    <% } %>
</body>
</html>

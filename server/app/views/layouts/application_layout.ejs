<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<meta name="keywords" content="Nara, Tourism, Sightseeing, Travel Guide">
    <meta name="description" content="Discover traditional Nara !" />
    <meta name="robots" content="index,follow,archive" /> 
    <meta http-equiv="content-language" content="en" />
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />

    <title><%= title %></title>

    <link rel="shortcut icon" href="/images/favicon.ico"/>
    <% if (path.indexOf('/post/') == 0) { %>
    <%- stylesheet_link_tag('common', 'post_style', 'flexslider', 'font-awesome', 'jquery.powertip') %>
    <%- javascript_include_tag('jquery-1.8.2.min', 'jquery.flexslider', 'jquery.powertip-1.1.0.min', 'post_script', 'http://maps.google.com/maps/api/js?sensor=false') %>
    <% } else { %>
    <%- stylesheet_link_tag('common', 'top_style', 'font-awesome', 'jquery.powertip') %>
	<%- javascript_include_tag('jquery-1.8.2.min', 'jquery.contenthover.min', 'jquery.easing.1.3', 'jquery.color', 'spin.min', 'jquery.animate-shadow-min', 'jquery.powertip-1.1.0.min', 'script') %>
    <% } %>
</head>
<body>
    <div id="wrapper">
        <div id="header">
			<a href="/"><h1>TRAD NARA</h1></a>
			<% if(user) { %>
			<div id="user-info">
                <img width="25" height="25" src="<%- profile_img_url(user) %>" />
				<%= user.name %>
        	</div>
			<% } %>
		</div>
    
        <div id="navigation">
            <ul>
                <li><%- link_to('HOME', '/', {title: 'Order posts by popularity'}) %></li>
                <li><%- link_to('TIMELINE', '/timeline', {title: 'Order posts by post date'}) %></li>
                <li><%- link_to('FAVORITES', '/favorites', {title: 'View my favorite posts'}) %></li>
                <li><%- link_to('CONTRIBUTORS', '/contributors', {title: 'Dedicated people who contributed to this project'}) %></li>
                <li><%if (user) { %>
                    <%- link_to('LOGOUT', '/logout', {title: 'Logout from Trad Nara'}) %>
                <% } else { %>
                    <%- link_to('LOGIN', '/login', {title: 'Login to Trad Nara'}) %>
                <% } %>
                </li>
            </ul>
        </div>
    
        <div id="container" class="clearfix">
			<%- body %>
   	    </div>

        <div id="footer">
            <div id="footer-miscs">
                <a href="/privacy-policy">Privacy Policy</a>
                <span>|</span>
                <a href="/terms-of-sevice">Terms of Service</a>
                <span>|</span>
                <a href="/contact">Contact Team</a>
                <span>|</span>
                <a href="/contact">Creative Commons</a>
            </div>
            <div id="footer-copyright">
                Copyright &copy <%= new Date().getFullYear() %> Trad Nara. All rights reserved.
            </div>
        </div>
    </div>
</body>
</html>

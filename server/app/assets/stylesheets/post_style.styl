body
  font-family: "Arimo", sans-serif

a
  text-decoration: none
  color: #eee
  &:hover
    color: #555

#contents
  position: relative
  width: 70%
  margin: 0 auto
  float: left
  h1
    font-size: 2em
    margin: 10px 0px 0px 0px
    padding: 0.25em 0em 0.25em 0.5em
    border-bottom: 1px dotted #999
    border-left: 5px solid #999
    font-weight: 800
    font-stretch: normal
    line-height: 1.5em
    font-family: "Arimo", sans-serif
  .share
    margin: 5px
    a
      vertical-align: top
    .fb_iframe_widget
      vertical-align: top
  .flexslider
    margin: 0px auto 30px auto

p
  font-size: 19px
  line-height: 1.4em
  font-family: "Vollkorn", serif
  text-indent: 0.5em
  margin: 1em 0
  color: #ddd
  a
    text-decoration: underline
    color: #ffffff
  a:hover
    color: #e44a24
p.lead
  font-weight: bold
  
h1, h2, h3, h4, h5, h6
  font-weight: bold
  margin: 10px 0
  color: #f0f0f0
h1
  font-size: 36px
h2
  font-size: 30px
h3
  font-size: 24px
h4
  font-size: 18px
h5
  font-size: 14px
h6
  font-size: 12px

#mapinfo
  display: none

#gmap
  height: 300px
  margin: 10px auto
  .location-name
    color: #000
    font-size: 1.5em
    margin: 5px 0px 10px 0px
    text-shadow: 1px 1px 0px #222
  .location-address
    color: #555
    padding-bottom: 10px
    border-bottom: 1px solid #ccc
  .location-gmap a
    font-size: 0.8em
    color: #666
    &:hover
      font-size: 0.8em
      color: #eee

#contents .info
  font-size: 0.75em
  padding: 3px
  margin: 2px 10px
  border: 1px dotted #fff
  color: #888
  border-radius: 3px
  a
    color: #fff
    text-decoration: none

#contents .post > ul, #contents .post > ol
  list-style-type: disc
  margin-left: 25px
  margin-bottom: 10px

#contents .post > li
  line-height: 20px

#contents .post iframe, #contents .post img
  margin: 20px auto
  display: block

.video-container
  position: relative;
  padding-bottom: 56.25%
  padding-top: 30px
  height: 0
  overflow: hidden

.video-container iframe, .video-container object, .video-container embed
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

#sidebar
  width: 25%
  float: right
  border-left: 2px dotted #888
  padding-left: 4px

#sidebar ul li.widget-container
  list-style-type: none
  h2
    margin: 20px 0px 0px 0px
    border-top: 2px solid white
    padding-top: 5px
    font-size: 1.6em
    font-family: 'Droid Serif', sans-serif
  ul li
    list-style-type: none
    border-bottom: 1px solid #555
    margin: 15px auto
    font-size: 1.2em
    a
      display: block
      &:hover
        color: #fff
        background-image: url('img/hover_bg.png')
  img
    width: 100%
    height: auto

@media screen and (max-width: 480px)
  #container
    float: none
    width: 100%

  #contents
    float: none
    width: 90%
    margin: 0 auto

  #sidebar
    float: none
    width: 90%
    margin: 0 auto


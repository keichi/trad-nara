@import 'nib'

global-reset()

body
  background-color: #3b3f44
  background-image: url('/images/bg.png')
  background-attachment: fixed

#wrapper
  margin-top: 5px
  margin-bottom: 5px
  color: #d0d0d0

#container
  position: relative
  margin: 90px auto 20px
  max-width: 1000px
  width: 90%

#footer
  border-top: 1px solid #777

#footer-miscs
  font-size: 12px
  text-align: center
  margin: 2px auto
  span
    margin-left: 3px
    margin-right: 3px
    color: #777

#footer-copyright
  font-size: 12px
  text-align: center
  margin: 2px auto

#navigation
  position: fixed
  top: 50px
  z-index: 1000
  width: 100%
  height: 25px
  border: 1px solid #aeaeae
  border-radius: 5px
  background: linear-gradient(top, #eeeeee, #bbbbbb)
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.4) , 0 0 10px rgba(0, 0, 0, 0.1)
  text-align: center
  text-shadow: 0px 1px 0px #fff
  li
    display: inline-block
    background-color: #dadada
    background: linear-gradient(top, #eeeeee, #bbbbbb)
    list-style-type: none
    letter-spacing: normal
    &:active
      background: linear-gradient(bottom, #eeeeee, #bbbbbb)
    a
      display: block
      padding-top: 5px
      padding-left: 5px
      height: 20px
      text-align: center
      color: #555
      font-weight: bold
      font-size: 0.9em
      margin-left: 10px
      margin-right: 10px
      text-decoration: none;

#header
  position: fixed
  top: 0px
  left: 0px
  z-index: 1000
  margin-bottom: 10px
  height: 50px
  background-color: #505050
  width: 100%
  a h1
    width: 284px
    height: 40px
    margin: 5px auto
    background-image: url('/images/logo.png')
    hide-text()

#user-info
  position: absolute
  right: 30px
  top: 10px
  background-color: #333
  color: #eee
  box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.5)
  border-radius: 4px
  font-weight: bold
  font-size: 13px
  padding: 5px 10px
  img
    vertical-align: middle
    margin-right: 10px

.clearfix
  clearfix()